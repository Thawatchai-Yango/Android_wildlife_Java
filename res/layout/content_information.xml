<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PeachPuff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Information"
    tools:showIn="@layout/activity_information">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/PeachPuff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/textViewHeadingHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="HISTORY"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/Crimson"
            android:layout_gravity="fill_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/textViewHeadingDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="DESCRIPTION"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:layout_gravity="fill_vertical"
            android:layout_weight="4" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/textViewHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:background="@color/AntiqueWhite"
            android:textColor="@color/BlueViolet"
            android:layout_gravity="fill_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:background="@color/AntiqueWhite"
            android:textColor="@color/BlueViolet"
            android:layout_gravity="fill_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/buttonActivities"
            style="@android:style/Widget.DeviceDefault.Button.Small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:onClick="setActivities"
            android:text="Activities"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttonAnimals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:onClick="setAnimals"
            android:text="Animals Found"
            android:layout_gravity="fill_vertical"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/buttonTimings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:text="Timings"
            android:layout_gravity="fill_vertical"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttonBestTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:text="Best time to visit"
            android:layout_gravity="fill_vertical"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:visibility="gone"
        android:id="@+id/linearLayoutVisibility">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/textViewTimings"
            android:layout_height="wrap_content"
            android:background="@color/AntiqueWhite"
            android:textColor="@color/BlueViolet"
            android:layout_weight="4"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/textViewBestTimes"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/AntiqueWhite"
            android:textColor="@color/BlueViolet"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/buttonHotels"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:text="Hotels"
            android:onClick="setHotels"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttonTicketBooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:layout_gravity="fill_vertical"
            android:text="Ticket Booking"
            android:onClick="setTicketBooking"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/buttonDND"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:text="Dos and Donts"
            android:onClick="setDND"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:layout_gravity="fill_vertical"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttonContactUs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/MediumAquamarine"
            android:text="Contact Us"
            android:onClick="setContactUs"
            android:textAlignment="center"
            android:layout_gravity="fill_vertical"
            android:textColor="@color/Crimson"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    <Button
        android:id="@+id/buttonLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/MediumAquamarine"
        android:text="Location"
        android:layout_weight="4"
        android:onClick="setLocation"
        android:textAlignment="center"
        android:layout_gravity="fill_vertical"
        android:textColor="@color/Crimson"
        android:textSize="23dp"
        android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>


</LinearLayout>


</android.support.v4.widget.NestedScrollView>