<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Teal"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="33.33"
        android:background="@drawable/state">

        <Spinner
            android:id="@+id/spinnerStates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="33.33"
        android:orientation="vertical"
        android:background="@drawable/animal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.75"
            android:text=" Search by Animal"
            android:textSize="17dp"
            android:textColor="@color/Crimson"
            android:textAlignment="viewStart"
            />

        <SearchView
            android:id="@+id/searchMenuAnimal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="5"
            android:queryHint="Enter Animal Name"
            android:textAlignment="viewStart"></SearchView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="33.33"
        android:background="@drawable/nationalpark">
        <Spinner
            android:id="@+id/spinnerParks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="viewStart"
            android:visibility="visible"
            android:layout_weight="0.8" />

    </LinearLayout>

</LinearLayout>